<div class="container">
  <div class="row">
    <div class="col-12">
      <div>
        <h2>جزییات فاکتور</h2>
      </div>
      <div class="float-end">
        <a href="/totalsale" class="btn btn-dark">بازگشت</a>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-12">
      <div>
        <div class="row">
          <div class="col-4">
            <div class="border border-2 rounded-pill">
              <div class="ms-5">
                <p>نام مشتری : <strong><%= name %> </strong></p>
              </div>
              <div class="ms-5">
                <p>
                  وضعیت پرداخت :
                  <strong
                    ><%= totalInformation[0] == 1 ? "پرداخت شده" : " بدهکار" %>
                  </strong>
                </p>
              </div>
            </div>
          </div>
        </div>
        <table class="table table-striped table-sm">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">نام کالا</th>
              <th scope="col">تعداد</th>
              <th scope="col">قیمت</th>
            </tr>
          </thead>
          <tbody>
            <% let i = 0; %> <% data.forEach((e) =>{ %>
            <tr>
              <td><%= i = i + 1 %></td>
              <td><%= e.productsID %></td>
              <td><%= e.count %></td>
              <td><%= e.price %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <hr />
        <div class="mt-3">
          <table class="table table-striped table-sm">
            <thead class="">
              <tr>
                <th scope="col">#</th>
                <th scope="col">تاریخ خرید</th>
                <th scope="col">تعداد کل</th>
                <th scope="col">جمع فاکتور</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td></td>
                <td><%= findeDate(totalInformation[1]) %></td>
                <td><%= totalInformation[3] %></td>
                <td><%= totalInformation[2] %> </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

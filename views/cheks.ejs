<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="mt-2">
        <h2>صفحه چک ها</h2>
      </div>
      <div class="float-end mt-2">
        <a href="/cheks/addcheks" class="btn btn-success">ثبت چک جدید</a>
      </div>
    </div>
  </div>
  <hr />
  <div class="row">
    <div class="col-12">
      <div>
        <% if(data.length != 0){ %>
        <table class="table table-striped table-sm">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">عنوان</th>
              <th scope="col">مبلغ</th>
              <th scope="col">به نام</th>
              <th scope="col">تاریخ</th>
              <th scope="col">وضعیت</th>
            </tr>
          </thead>
          <tbody>
            <% let i = 0; %> <% data.forEach(e => { %>
            <tr>
              <td><%= i = i + 1 %></td>
              <td><%= e.tittle %></td>
              <td><%= e.amount %></td>
              <td><%= e.paymentTo %></td>
              <td><%= e.date %></td>
              <%if(e.status == 0){%>
              <td>
                <a href="/cheks/addsheks/payment/<%= e.checkID %>" class="btn btn-primary">پرداخت</a>
              </td>
              <% } else{ %>
                <td class="text-success">پرداخت شده</td>
                <% } %>  
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% }else{ %>
        <div class="text-center text-danger">
          <h4>هیچ چکی هنوز ثبت نشده است</h4>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

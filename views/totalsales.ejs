<div class="container">
  <div class="row">
    <div class="text-center">
      <h2>فاکتور ها</h2>
    </div>
  </div>
  <%- include("./inc/message.ejs") %>
  <div class="row">
    <% if(inv != 0){ %>
    <div class="col-12">
      <div>
        <table class="table table-striped table-sm">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">نام مشتری</th>
              <th scope="col">مبلغ کل (تومان)</th>
              <th scope="col">تاریخ</th>
              <th scope="col">وضعیت</th>
              <th scope="col" class="text-center">تنظیمات</th>
            </tr>
          </thead>
          <tbody>
            <% let i = 0 %> <% inv.forEach(async(e) =>{ %>
            <tr>
              <td><%= i = i + 1 %></td>
              <td><%= findeUser(Users,e.BuyerID) %></td>
              <td><%= e.totalAmount %></td>
              <td><%= findeDate(e.createdAt) %></td>
              <td><%= e.statusID == 1 ? "پرداخت شده" : "بدهکار" %></td>
              <td class="text-center">
                <% if(e.statusID == 0){ %>
                <a
                  href="/totalsale/pay/<%= e.inoviceID %> "
                  class="btn btn-success"
                  >پرداخت</a
                >
                <% } %>
                <a
                  href="/totalsale/show/<%= e.inoviceID %> "
                  class="btn btn-secondary"
                  >نمایش</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% }else{ %>
    <div class="col-12">
      <div class="text-center text-danger">
        <hr />
        <h4>لیست فروش خالی است</h4>
      </div>
    </div>
    <% } %>
  </div>
</div>

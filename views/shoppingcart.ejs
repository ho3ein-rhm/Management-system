<div class="container">
  <div class="row">
    <div class="text-center">
      <h2>سبد خرید</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div>
        <% if(shoppingcart.length > 0){ %>
        <table class="table table-striped table-sm">
          <thead class="">
            <tr>
              <th scope="col">#</th>
              <th scope="col">نام</th>
              <th scope="col">تعداد</th>
              <th scope="col">قیمت</th>
              <th scope="col" class="text-center">تنظیمات</th>
            </tr>
          </thead>
          <tbody>
            <% let i = 0 %> 
            <% shoppingcart.forEach(e =>{ %>
            <tr>
              <td><%= i = i + 1 %></td>
              <td><%= e.name %></td>
              <td><%= e.Count %></td>
              <td><%= e.price %></td>
              <td class="text-center">
                <a href="/shoppingcart/delete/<%= e.idtblproducts %>" class="btn btn-danger">حذف</a>
                <a href="/shoppingcart/deleteone/<%= e.idtblproducts %>" class="btn btn-secondary">حذف تعداد</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <form method="post" action="/shoppingcart/final">
          <div class="form-check mb-2">
            <input type="checkbox" class="form-check-input" name="Status" id="checkbox">
            <label for="checkbox" class="form-check-label">خرید نسیه</label>
          </div>
          <input type="submit" value="نهایی کردن خرید" class="btn btn-primary">
        </form>
        <% }else{ %>
        <div class="col-12">
          <div class="text-center text-danger">
            <hr />
            <h4>سبد خرید خالی است</h4>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
